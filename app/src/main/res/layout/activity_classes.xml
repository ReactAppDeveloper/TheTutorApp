<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:weightSum="1"
    android:background="#eeeded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/edittxt">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo1"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on any Class for which\n you need Tutor"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="@color/toolbar"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/edittxt">


            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Pre School"
                android:id="@+id/button"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Class 1 to 5"
                android:id="@+id/button1"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel1"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Class 6 to 8"
                android:id="@+id/button2"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel2"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/edittxt">>


            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Matric"
                android:id="@+id/button3"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel3"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Intermediate"
                android:id="@+id/button4"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel4"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Bachelors"
                android:id="@+id/button5"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel5"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/edittxt">

            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Masters"
                android:id="@+id/button6"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel5"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />
            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="O Level"
                android:id="@+id/button7"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel6"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />
            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="A Level"
                android:id="@+id/button8"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel6"
                android:textColor="@color/toolbar"
                android:drawablePadding="-35dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/edittxt">>

            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Diploma And Certifications"
                android:id="@+id/button9"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel8"
                android:textColor="@color/toolbar"
                android:drawablePadding="-20dp"
                android:layout_gravity="left"
                android:textSize="12dp" />
            <Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Entry Test Preparation"
                android:id="@+id/button10"
                android:layout_weight="0.1"
                android:background="@drawable/round_btn1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/classespanel9"
                android:textColor="@color/toolbar"
                android:drawablePadding="-20dp"
                android:layout_gravity="left"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>