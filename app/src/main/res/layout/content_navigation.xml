<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_navigation"
    android:background="@color/edittxt">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo1"
        android:layout_marginTop="40dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:background="@drawable/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Home"
            android:id="@+id/button"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableTop="@drawable/ic_icon_10"
            android:drawablePadding="-35dp"
            android:textColor="@color/toolbar"
            android:layout_gravity="left" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Classes"
            android:id="@+id/btn_classes"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:drawableTop="@drawable/ic_icon_12"
            android:drawablePadding="-35dp"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Subjects"
            android:id="@+id/btn_subject"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableTop="@drawable/ic_icon_16"
            android:drawablePadding="-35dp"
            android:textColor="@android:color/white"
            android:layout_gravity="left" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Skills"
            android:id="@+id/btn_skills"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:drawableTop="@drawable/ic_icon_17"
            android:drawablePadding="-35dp"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Our Tutor"
            android:id="@+id/btn_ourtutor"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableTop="@drawable/ic_icon_21"
            android:drawablePadding="-35dp"
            android:textColor="@android:color/white"
            android:layout_gravity="left" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="NEWS FEED"
            android:id="@+id/btn_notification"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:drawableTop="@drawable/ic_icon_23"
            android:drawablePadding="-35dp"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>


